<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/savedRecordingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/glass_white"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Intervallum"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/textview_background"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/dateLeftButton"
                            style="@null"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_background"
                            android:foreground="@drawable/arrow_left_icon"
                            android:foregroundGravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/datePickerTextView"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/dateRightButton"
                            style="@null"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_background"
                            android:foreground="@drawable/arrow_right_icon"
                            android:foregroundGravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Dátum"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/textview_background"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/intervalLeftButton"
                            style="@null"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_background"
                            android:foreground="@drawable/arrow_left_icon"
                            android:foregroundGravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/intervalTextView"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/textview_background"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/intervalRightButton"
                            style="@null"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_background"
                            android:foreground="@drawable/arrow_right_icon"
                            android:foregroundGravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/downloadButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_button_background"
                        android:text="Letöltés"
                        android:textAlignment="center"
                        android:textSize="24sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/savedRecordingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_button_background"
        android:text="Mentett\nfelvételek"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>